{
  "name": "figmamind",
  "version": "1.0.0",
  "description": "MCP server que transforma componentes do Figma em formato JSON padronizado para reconstru√ß√£o por IA",
  "repository": "https://github.com/joao-loker/FigmaMind",
  "protocol_version": "0.3",
  "main": "mcp-server.js",
  "author": "Jo√£o Pereira",
  "license": "MIT",
  "tags": ["figma", "design-system", "ui-components", "json-transformer", "figmamind"],
  "metadata": {
    "smithery": {
      "icon": "üß†",
      "category": "design"
    }
  },
  "commands": {
    "start": "node mcp-server.js"
  },
  "env": {
    "required": ["FIGMA_TOKEN"],
    "optional": ["PORT"]
  },
  "endpoints": {
    "transform": {
      "path": "/transform",
      "method": "POST",
      "description": "Transforma componentes do Figma em formato JSON padronizado",
      "request_schema": {
        "type": "object",
        "required": ["figmaUrl"],
        "properties": {
          "figmaUrl": {
            "type": "string",
            "description": "URL do arquivo ou frame do Figma para processar"
          }
        }
      },
      "response_schema": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "message": { "type": "string" },
          "source": { "type": "string" },
          "data": { "type": "object" }
        }
      }
    },
    "health": {
      "path": "/health",
      "method": "GET",
      "description": "Verifica a sa√∫de do servidor",
      "response_schema": {
        "type": "object",
        "properties": {
          "status": { "type": "string" },
          "message": { "type": "string" }
        }
      }
    },
    "assets": {
      "path": "/assets/:filename",
      "method": "GET",
      "description": "Acessa assets extra√≠dos do Figma",
      "response_content_type": "image/*"
    }
  }
} 